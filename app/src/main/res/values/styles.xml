<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBackgroundPrimary</item>
        <item name="colorPrimaryDark">@color/colorBackgroundPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="SpentWellCard" >
        <!-- Customize your theme here. -->

    </style>

    <style name="LongButton">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/textColorButton</item>
        <item name="neuPlatformColor">@color/colorBackgroundPrimary</item>
        <item name="neuButtonType">elevated_flat</item>
        <item name="neuFlatButtonColor">@color/colorButtonEnabled</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">0.3</item>
    </style>

    <style name="PitView">
        <item name="pitColor">@color/colorBackgroundPrimaryDark</item>
        <item name="neuPlatformColor">@color/colorBackgroundPrimary</item>
        <item name="neuLightShadowColor">@color/colorShadowLight</item>
        <item name="neuDarkShadowColor">@color/colorShadowDark</item>
    </style>

    <style name="TextInput">
        <item name="pitColor">@color/colorBackgroundPrimaryDark</item>
        <item name="neuPlatformColor">@color/colorBackgroundPrimary</item>
        <item name="neuLightShadowColor">@color/colorShadowLight</item>
        <item name="neuDarkShadowColor">@color/colorShadowDark</item>
    </style>

    <style name="ElevatedView">
        <item name="neuPlatformColor">@color/colorBackgroundPrimary</item>
        <item name="neuCornerRadius">5dp</item>
        <item name="neuShadowOffset">5dp</item>
    </style>

    <style name="FabButton">
        <item name="neuPlatformColor">@color/colorBackgroundPrimary</item>
        <item name="neuButtonRadius">28dp</item>
    </style>

    <style name="SettingsButton">
        <item name="neuPlatformColor">@color/colorBackgroundPrimary</item>
        <item name="neuButtonRadius">36dp</item>
        <item name="neuButtonType">elevated_flat</item>
    </style>

    <style name="Heading1">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">32dp</item>
    </style>

    <style name="Heading2">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="Heading3">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="AppNameHeader">
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/textSizeAppName</item>

    </style>

</resources>