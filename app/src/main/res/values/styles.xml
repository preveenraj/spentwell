<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBackgroundPrimary</item>
        <item name="colorPrimaryDark">@color/colorBackgroundPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="SpentWellCard" parent="Widget.Neumorph.CardView">
        <!-- Customize your theme here. -->
        <item name="neumorph_inset">@dimen/longButtonInset</item>
        <item name="neumorph_shadowColorLight">@color/colorShadowLight</item>
        <item name="neumorph_shadowColorDark">@color/colorShadowDark</item>
        <item name="neumorph_shadowElevation">@dimen/longButtonShadowElevation</item>
    </style>

    <style name="LongButton" parent="Widget.Neumorph.Button">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="neumorph_backgroundColor">@color/colorAccent</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="neumorph_inset">@dimen/longButtonInset</item>
        <item name="neumorph_shadowColorLight">@color/colorShadowLight</item>
        <item name="neumorph_shadowColorDark">@color/colorShadowDark</item>
        <item name="neumorph_shadowElevation">@dimen/longButtonShadowElevation</item>
    </style>

    <style name="AppNameHeader" parent="Widget.Neumorph.TextView">
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/textSizeAppName</item>
        <item name="neumorph_shadowColorLight">@color/colorShadowLight</item>
        <item name="neumorph_shadowColorDark">@color/colorShadowDark</item>
        <item name="neumorph_shadowElevation">@dimen/longButtonShadowElevation</item>
    </style>

</resources>